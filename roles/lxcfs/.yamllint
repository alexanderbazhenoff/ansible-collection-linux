---
# Based on ansible-lint config
extends: default
ignore: |
  templates/
  files/*.j2
  README.md
  LICENSE
  .yamllint
  .flake8
  verify.py

rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  colons:
    max-spaces-after: -1
    level: error
  commas:
    max-spaces-after: -1
    level: error
  comments: disable
  comments-indentation: disable
  document-start: disable
  empty-lines:
    max: 2
    level: error
  hyphens:
    level: error
  indentation: disable
  key-duplicates: enable
  line-length:
    max: 120
    level: error
  new-line-at-end-of-file: disable
  new-lines:
    type: unix
  trailing-spaces: enable
  truthy:
    allowed-values: ['True', 'False']
    check-keys: True